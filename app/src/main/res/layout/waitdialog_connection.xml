<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff282828">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgConnectLoading"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/loading2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:padding="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/connecting_to"
        android:id="@+id/txtViewText"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imgConnectLoading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txtSetDialog"
        android:id="@+id/txtSetDialog"
        android:textSize="15dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/txtViewText"
        android:layout_alignLeft="@+id/txtViewText"
        android:layout_alignStart="@+id/txtViewText"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgConnectionLoadingRevers"
        android:src="@mipmap/loading"
        android:padding="15dp"
        android:layout_alignTop="@+id/imgConnectLoading"
        android:layout_alignLeft="@+id/imgConnectLoading"
        android:layout_alignStart="@+id/imgConnectLoading" />

</RelativeLayout>