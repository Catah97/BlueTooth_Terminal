<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ff282828">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgConnectLoading"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/loading2"
        android:padding="15dp"
        android:layout_alignTop="@+id/imgConnectionLoadingRevers"
        android:layout_alignLeft="@+id/imgConnectionLoadingRevers"
        android:layout_alignStart="@+id/imgConnectionLoadingRevers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Čekejte prosím!"
        android:id="@+id/txtViewText"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgConnectionLoadingRevers"
        android:src="@mipmap/loading"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>